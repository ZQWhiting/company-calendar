<h2 class="orange-text">Calendars</h2>
<div>
    {{#each employee.calendars}}
    <div class="item">
        <h3>{{format_date date}} <button type="submit" class="delete-calendar-btn right btn-small light-blue" data-id={{id}}>Delete
                Calendar</button></h3>
        {{#if events}}
        <h4>Events:</h4>
        <div class="event">
        {{#each events}}
        <p>{{title}} <button type="submit" class="delete-event-btn btn-small red right" data-id={{id}}>Delete Event</button></p>
        <p>Description: {{description}}</p>
        <p>Time: {{start_time}}-{{end_time}}</p>
        {{/each}}
        </div>
        {{/if}}
    </div>
    {{/each}}
</div>

<h2 class="orange-text">Add Calendar</h2>
<form class='item add-calendar-form'>
    <div>
        <h4>Date</h4>
        <input type="date" name="calendar-date">
    </div>
    <div>
        <button class="btn-small light-blue">Add Date</button>
    </div>
</form>

<h2 class="orange-text">Add Event</h2>
<form class="add-event-form form">
    <div>
        <h4>Title</h4>
        <input name="event-title">
        <h4>Description</h4>
        <textarea name="event-description"></textarea>
        <h4>Calendar</h4>
        <select name="event-calendar">
            {{#each employee.calendars}}
            <option value="{{id}}">{{format_date date}}</option>
            {{/each}}
        </select>
        <h4>Start Time</h4>
        <input name="event-start_time">
        <h4>End Time</h4>
        <input name="event-end_time">
        <br>
    </div>
    <div>
        <button class="btn-small light-blue">Add Event</button>
    </div>
</form>

<script src="/javascript/add-event.js"></script>
<script src="/javascript/add-calendar.js"></script>
<script src="/javascript/delete-event.js"></script>
<script src="/javascript/delete-calendar.js"></script>